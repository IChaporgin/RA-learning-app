<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleItemCategoryDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/description_item_text_size</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/item_category_description</item>
    </style>
    <style name="StyleItemCategoryTitle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">@dimen/title_item_text_size</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleItemCategory" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemRecipe" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_item_text_size</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/item_recipe_color</item>
    </style>

    <style name="IngredientTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/ingredient_text_size</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/item_recipe_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="IngredientItemStyle" parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/white</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="IngredientMethodTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/ingredient_text_size</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/item_recipe_color</item>
    </style>
    
    <style name="styleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
    </style>

</resources>