<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="@dimen/item_category_width"
    android:layout_height="@dimen/item_category_height"
    android:layout_marginHorizontal="@dimen/main_margin_half"
    android:layout_marginVertical="@dimen/main_margin_half"
    android:clickable="true"
    android:contentDescription="@string/category_list"
    app:cardCornerRadius="@dimen/corner_radius"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_item_category"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgItemCategory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/category_list"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/textItemCategoryName"
            tools:src="@drawable/burger" />

        <TextView
            android:id="@+id/textItemCategoryName"
            style="@style/HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_margin_half"
            android:layout_marginTop="@dimen/main_margin_half"
            tools:text="Бургеры" />

        <TextView
            android:id="@+id/textItemCategoryDescription"
            style="@style/StyleItemCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/main_margin_half"
            android:layout_marginVertical="@dimen/main_margin_half"
            tools:text="Рецепты всех популярных видов бургеров" />

    </LinearLayout>

</androidx.cardview.widget.CardView>